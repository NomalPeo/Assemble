<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//maybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Users">

<resultMap id="userMap" type="users">
<id property="user_id" column="user_id"/>

<result property="user_no" column="user_no"/>
<result property="user_id" column="user_id"/>
<result property="user_pwd" column="user_pwd"/>
<result property="user_name" column="user_name"/>
<result property="user_gender" column="user_gender"/>
<result property="user_nickname" column="user_nickname"/>
<result property="user_date" column="user_date"/>
<result property="user_state" column="user_state"/>
<result property="user_delcont" column="user_delcont"/>
<result property="user_deldate" column="user_deldate"/>

<collection property="authList" resultMap="authMap"></collection>
</resultMap>

<resultMap id="authMap" type="authvo">
<result property="user_id" column="user_id"/>
<result property="auth" column="auth"/>

</resultMap>


<select id="read_memInfo"  parameterType="java.lang.String" resultMap="userMap">
	select
	mem.user_no,user_id, user_pwd,user_name,user_gender,user_nickname,user_date,user_state,
	user_delcont,user_deldate, auth FROM users mem LEFT OUTER JOIN
	users_auth auth on mem.user_id = auth.user_id
	where mem.user_id=#{login_id}
</select>

